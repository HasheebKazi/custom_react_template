{
    "[html]": {
        "editor.defaultFormatter": "esbenp.prettier-vscode",
        "editor.formatOnSave": true,
        "editor.tabSize": 4
    },
    "[css]": {
        "editor.defaultFormatter": "esbenp.prettier-vscode",
        "editor.formatOnSave": true,
        "editor.tabSize": 4
    },
    "[typescriptreact]": {
        "editor.defaultFormatter": "esbenp.prettier-vscode",
        "editor.formatOnSave": true,
        "editor.tabSize": 4
    },
    "editor.wordWrap": "on",
    // "editor.renderWhitespace": "all",
    "editor.fontSize": 14,
    "editor.tabSize": 4,
    "files.encoding": "utf8",
    "files.exclude": {
        "**/__pycache__": true
    },
    "files.watcherExclude": {
        "**/.git/objects/**": true,
        "**/.git/subtree-cache/**": true,
        "**/node_modules/*/**": true,
        "**/bin": true,
        "**/lib": true,
        "**/lib64": true,
        "**/include": true,
        "**/share": true,
        "**/venv/**": true
    },
    "search.exclude": {
        "**/node_modules": true,
        "**/bower_components": true,
        "**/venv/**": true,
        "**/.git/**": true,
    }
}